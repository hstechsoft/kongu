{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Sync and Push Both",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-ExecutionPolicy", "Bypass",
        "-File", "${workspaceFolder}\\sync_and_push.ps1",
        "${input:commitMessage}"
